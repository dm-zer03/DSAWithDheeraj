@{
    ViewData["Title"] = "ViewDataType";
}

@{
    // Razor Block c# Code 
    int price = Convert.ToInt16(ViewData["prodPrice"]);
    int qty = Convert.ToInt16(ViewData["prodQty"]);
    int total = price * qty;
}

<div>
    @ViewData["prod"] 
    @ViewData["prodName"]
    @Convert.ToInt32(@ViewData["prodPrice"])/10
    @((Convert.ToInt32(ViewData["prodPrice"]) / 10))
    @ViewData["prodQty"]
    <h3>Total:@total</h3>
</div>
